<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".StatsFragment">

    <TextView
        android:id="@+id/statsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자세 분석 리포트"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/statsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/aiDiagnosisTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 종합 진단"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/lineChart"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/aiDiagnosisText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#EEEEEE"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/aiDiagnosisTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="- 진단: 후반 저하 유형..." />

    <!-- ✅ [수정] 삭제되었던 상세 정보 텍스트 뷰들 복원 -->
    <TextView
        android:id="@+id/totalTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/aiDiagnosisText"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="- 총 측정 시간: 15분 32초" />

    <TextView
        android:id="@+id/badPostureTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/totalTimeText"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="- 자세가 무너진 시간: 3분 1초" />

    <TextView
        android:id="@+id/breakCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/badPostureTimeText"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="- 자세가 무너진 횟수: 5회" />

    <TextView
        android:id="@+id/avgAngleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/breakCountText"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="- 평균 목 각도: 28.5도" />

</androidx.constraintlayout.widget.ConstraintLayout>